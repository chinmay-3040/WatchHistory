<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read</title>
    <link rel="stylesheet" href="/stylesheets/index.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full  bg-zinc-900 p-10 text-white">

        <div class="nav mb-10">
            <a class="text-green-400" href="/">Back to home</a>
        </div>

        <h1 class="text-3xl tracking-tighter mb-3 ">All series</h1>
        <div class="users flex gap-3 flex-wrap">



            <% if(allseries.size > 0){ %>
                <h1>wgwg</h1>
            <% } %>
  
                <% allseries.forEach(series => { %>
                    <div class="user w-56 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-40 bg-zinc-500 rounded-lg overflow-hidden">
                            <img class="w-full h-full object-cover" src="<%= series.imageUrl %>">
                        </div>
                        <h3 class="text-xl tracking-tighter mt-3"><%= series.name %></h3>
                        <h4 class="text-green-400"><%= series.category %></h4>
                        <h5 class="text-zinc-500"><%= series.seasons %> seasons</h5>
                        <div class="flex gap-3 space-x-4 mt-10">
                            <a class="text-sm text-yellow-200" href="/update/<%= series._id %>">Edit Series</a>
                            <a class="text-sm text-red-500" href="/delete/<%= series._id %>">Delete Series</a>
                        </div>
                    </div>
                <% }); %>
             
            

           

            
        </div>

    </div>
</body>
</html>